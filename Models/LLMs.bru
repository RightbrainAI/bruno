meta {
  name: LLMs
  type: http
  seq: 1
}

get {
  url: {{api_url}}/model
  body: none
  auth: inherit
}

params:query {
  ~include_retired: true
}

headers {
  Authorization: Bearer <token>
}

vars:post-response {
  imageModelId: 
}

script:post-response {
  const imageModel = res.getBody().find(model => model.supports_image_output === true);
  if (imageModel) {
    bru.setVar('imageModelId', imageModel.id);
  }
}
